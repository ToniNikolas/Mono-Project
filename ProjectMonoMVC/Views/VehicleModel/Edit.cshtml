@model ProjectMonoMVC.ViewModels.VehicleModelView
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form class="form-horizontal" method="post" action="EditSave">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div class="box-body">

        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Name</label>
                <select asp-for="MakeId"
                        asp-items="@(new SelectList(ViewBag.MakeId,"Id","Name"))">
                    <option>Please select one</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Model Name</label>
                <input asp-for="ModelName" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Abrv</label>
                <input asp-for="Abrv" />
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="reset" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-info pull-right">Save</button> |
        @Html.ActionLink("Back To List", "Index")
    </div>

</form>

